<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Soluciones Terminadas</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="soporte">
    <h2>Soluciones Terminadas</h2>
    <% if (!incidencias || incidencias.length === 0) { %>
      <p>No hay incidencias terminadas.</p>
    <% } else { %>
      <% incidencias.forEach(function(incidencia) { %>
        <div class="incidencia-card terminada">
          <p><strong>ID Incidencia:</strong> <%= incidencia.id_incidencia %></p>
          <p><strong>ID Reporte:</strong> <%= incidencia.id_reporte %></p>
          <p><strong>Estado:</strong> <%= incidencia.estado %></p>
          <p><strong>Prioridad:</strong> <%= incidencia.prioridad %></p>
          <p><strong>Comentario:</strong> <%= incidencia.comentario || 'Sin comentarios' %></p>
        </div>
      <% }); %>
    <% } %>
  </body>
</html>
