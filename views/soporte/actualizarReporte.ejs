<h2>Actualizar Incidencia</h2>
<form method="POST" action="/soporte/actualizar">
  <input type="number" name="id_incidencia" placeholder="ID Incidencia" required />
  <select name="estado">
    <option>Pendiente</option>
    <option>En Progreso</option>
    <option>Resuelto</option>
    <option>Cerrado</option>
  </select>
  <select name="prioridad">
    <option>Alta</option>
    <option>Media</option>
    <option>Baja</option>
  </select>
  <button type="submit">Actualizar</button>
</form>